<?xml version="1.0" encoding="utf-8"?>
<com.yewanlong.widget.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                         android:layout_width="match_parent"
                                         android:layout_height="match_parent"
                                         android:background="@color/white"
                                         android:gravity="center"
                                         android:orientation="vertical">

    <ImageView
        android:id="@+id/club_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/shape_corner_10dp_solid_white"
        android:scaleType="centerCrop"/>

    <FrameLayout
        android:id="@+id/framelayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone"
        android:background="#aaffffff">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:src="@drawable/ic_friends_sends_pictures_select_icon_selected"/>
    </FrameLayout>
</com.yewanlong.widget.SquareLayout>